    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="20dp"
        android:background="@color/white">
        <EditText
            android:id="@+id/fuel_input_data"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="15dp"

            android:hint="@string/date_hint" />
        <EditText
            android:id="@+id/fuel_input_cost"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="15dp"
            android:inputType="number"
            android:hint="@string/cost_hint"/>

          <TextView
              android:id="@+id/show_types_menu"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:layout_marginHorizontal="15dp"
              android:layout_marginTop="30dp"
              android:clickable="true"
              android:textColor="@color/black"
              android:textSize="18dp"
              android:hint="@string/type_expense"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginVertical="5dp"
            android:layout_marginHorizontal="15dp"
            android:background="@color/color_separating_bar"/>

        <EditText
            android:id="@+id/fuel_input_comment"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="15dp"
            android:layout_marginTop="30dp"
            android:inputType="text"
            android:hint="@string/hint_comment"/>
    </LinearLayout>
